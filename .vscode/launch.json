{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Playground dev (Bun)",
            "type": "node-terminal",
            "request": "launch",
            "command": "bun run dev",
            "cwd": "${workspaceFolder}/apps/playground"
        },
        {
            "name": "Playground dev (Bun, inspect)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/playground",
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "--inspect",
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}