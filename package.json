{
  "name": "arcanvas",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@eslint/js": "latest",
    "@types/bun": "latest",
    "bun-plugin-glsl": "^0.2.0",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-unused-imports": "latest",
    "jsonc-eslint-parser": "^2.4.1",
    "prettier": "latest",
    "prettier-plugin-glsl": "^0.2.2",
    "tsdoc-markdown": "^1.4.1",
    "typescript-eslint": "latest",
    "vue": "^3.5.27"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "play": "bun run apps/playground/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "docs:dev": "bunx --bun vitepress dev docs",
    "docs:build": "bunx --bun vitepress build docs",
    "docs:preview": "bunx --bun vitepress preview docs",
    "docs:api": "bun run scripts/generate-api-docs.ts"
  },
  "dependencies": {
    "vitepress": "^1.6.4"
  }
}
